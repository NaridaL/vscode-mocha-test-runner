{
  "name": "vscode-mocha-test-runner",
  "displayName": "vscode-mocha-test-runner",
  "description": "Code lens provider and runner for mocha unit tests.",
  "version": "0.0.4",
  "publisher": "cstechnologies",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/pavel-purma/vscode-mocha-test-runner.git"
  },
  "engines": {
    "vscode": "^1.10.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Mocha options",
      "properties": {
        "mocha.options": {
          "default": {},
          "description": "Options to run Mocha"
        },
        "mocha.files.rootPath": {
          "default": "",
          "description": "Directory with test files",
          "type": "string"
        },
        "mocha.files.ignore": {
          "default": [
            "**/.git/**/*",
            "**/node_modules/**/*"
          ],
          "description": "Globs to ignore when searching for test files",
          "type": [
            "string"
          ]
        },
        "mocha.env": {
          "default": {},
          "description": "Environment variables to run your tests"
        },
        "mocha.setup": {
          "default": "",
          "description": "Name of script, that will be imported into mocha. (Ex: jsdom init)",
          "type": "string"
        }
      }
    },
    "commands": [{
        "command": "vscode-mocha-test-runner.run-all-tests",
        "title": "Mocha test runner - run all tests"
    }]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "vscode": "^1.1.0",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "deep-extend": "^0.4.1",
    "escape-regexp": "0.0.1",
    "typescript": "^2.2.2"
  },
  "devDependencies": {   
    "@types/chai": "^3.4.35",
    "@types/mocha": "^2.2.40",   
    "@types/deep-extend": "^0.4.30",    
    "@types/node": "^7.0.12",
    "@types/source-map": "^0.5.0"
  }
}
